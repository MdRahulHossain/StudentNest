<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentnest.controllers.StudentDashboardController">

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #2196F3;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="StudentNest" textFill="WHITE">
                <font>
                    <Font size="20.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <Button text="🏠 Browse Rooms" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="📍 Locations" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="💰 Price Guide" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="📞 Support" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Button>

            <Button fx:id="logoutButton" onAction="#handleLogout" text="🚪 Logout" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 5;" prefWidth="200.0" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label fx:id="welcomeLabel" text="Welcome, Student!">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Filters -->
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <Label text="Filter by:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="locationFilter" onAction="#handleLocationFilter" />
                <ComboBox fx:id="priceFilter" onAction="#handlePriceFilter" />
            </HBox>

            <!-- Rooms Container -->
            <ScrollPane fitToWidth="true">
                <VBox fx:id="roomsContainer" spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>

    <style>
        -fx-background-color: #f5f5f5;
    </style>
</BorderPane>