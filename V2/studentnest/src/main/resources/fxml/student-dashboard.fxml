<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentnest.controllers.StudentDashboardController">

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #673AB7;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label alignment="CENTER" prefHeight="30.0" prefWidth="220.0" styleClass="PANELNAME" text="Student Panel">
                <font>
                    <Font size="20.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <Label styleClass="PANELNAMEN" text="Total Users:" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <Label fx:id="userCountLabel" prefHeight="27.0" prefWidth="285.0" styleClass="uN" text="0" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>

            <Label styleClass="PANELNAMEN" text="Total Rooms:" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <Label fx:id="roomCountLabel" prefHeight="27.0" prefWidth="245.0" styleClass="rN" text="0" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <Button fx:id="logoutButton" onAction="#handleLogout" prefWidth="200.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 5;" text="ðŸšª Logout" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0" styleClass="container">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label fx:id="welcomeLabel" styleClass="welcome-label" text="Welcome, Student!" />
            </HBox>

            <!-- Filters -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="filter-container">
                <Label alignment="CENTER" prefHeight="17.0" prefWidth="68.0" styleClass="section-label" text="Filter by:" />
                <ComboBox fx:id="locationFilter" onAction="#handleLocationFilter" />
                <ComboBox fx:id="priceFilter" onAction="#handlePriceFilter" />
            </HBox>

            <!-- Rooms Container -->
            <ScrollPane fitToWidth="true">
                <VBox fx:id="roomsContainer" spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" />
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
