<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.PieChart?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentnest.controllers.AdminDashboardController">

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="250.0" styleClass="sidebar,admin-sidebar">

            <Label text="Admin Panel" textFill="WHITE" styleClass="subtitle-label">
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <Button text="👥 Manage Users" styleClass="sidebar-btn" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="🏠 Manage Rooms" styleClass="sidebar-btn" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="📊 Statistics" styleClass="sidebar-btn" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="🛠️ Settings" styleClass="sidebar-btn" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Button>

            <Button fx:id="logoutButton" onAction="#handleLogout" text="🚪 Logout" styleClass="btn-danger" prefWidth="200.0" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0" styleClass="container">

            <!-- Header -->
            <Label fx:id="welcomeLabel" text="Admin Dashboard" styleClass="welcome-label" />

            <!-- Content Tabs -->
            <TabPane>
                <!-- Users Tab -->
                <Tab text="Users Management" closable="false">
                    <VBox spacing="15.0" styleClass="container">

                        <Label text="All Registered Users" styleClass="section-label" />

                        <TableView fx:id="usersTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150.0" />
                                <TableColumn fx:id="userTypeColumn" text="Type" prefWidth="100.0" />
                                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150.0" />
                                <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="120.0" />
                            </columns>
                        </TableView>

                        <Button fx:id="deleteUserButton" onAction="#handleDeleteUser" styleClass="btn-danger" text="Delete Selected User" />
                    </VBox>
                </Tab>

                <!-- Rooms Tab -->
                <Tab text="Rooms Management" closable="false">
                    <VBox spacing="15.0" styleClass="container">

                        <Label text="All Posted Rooms" styleClass="section-label" />

                        <TableView fx:id="roomsTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="roomLocationColumn" text="Location" prefWidth="150.0" />
                                <TableColumn fx:id="roomPriceColumn" text="Price" prefWidth="100.0" />
                                <TableColumn fx:id="roomOwnerColumn" text="Owner" prefWidth="150.0" />
                            </columns>
                        </TableView>

                        <Button fx:id="deleteRoomButton" onAction="#handleDeleteRoom" styleClass="btn-danger" text="Delete Selected Room" />
                    </VBox>
                </Tab>

                <!-- Statistics Tab -->
                <Tab text="Statistics" closable="false">
                    <VBox spacing="15.0" styleClass="container">

                        <Label text="User Statistics" styleClass="section-label" />

                        <PieChart fx:id="userStatsChart" prefHeight="400.0" prefWidth="500.0" styleClass="chart" />
                    </VBox>
                </Tab>
            </TabPane>
        </VBox>
    </center>
</BorderPane>