<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentnest.controllers.HouseOwnerDashboardController">

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #4CAF50;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="House Owner Panel" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <Button text="🏠 Manage Rooms" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="➕ Add New Room" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="📊 Statistics" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>

            <Button text="📞 Support" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Button>

            <Button fx:id="logoutButton" onAction="#handleLogout" text="🚪 Logout" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 5;" prefWidth="200.0" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>

            <!-- Header -->
            <Label fx:id="welcomeLabel" text="Welcome, House Owner!">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>

            <!-- Split Content -->
            <HBox spacing="30.0">
                <!-- Add/Update Room Form -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>

                    <Label text="Add/Update Room Details">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>

                    <VBox spacing="8.0">
                        <Label text="Location:" />
                        <ComboBox fx:id="locationComboBox" prefWidth="250.0" />
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="Price (per month):" />
                        <TextField fx:id="priceField" prefWidth="250.0" />
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="Description:" />
                        <TextArea fx:id="descriptionArea" prefHeight="80.0" prefWidth="250.0" />
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="Contact Number:" />
                        <TextField fx:id="contactField" prefWidth="250.0" />
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="Map Link (optional):" />
                        <TextField fx:id="mapLinkField" prefWidth="250.0" />
                    </VBox>

                    <HBox spacing="10.0">
                        <Button fx:id="addRoomButton" onAction="#handleAddRoom" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add Room" />
                        <Button fx:id="updateRoomButton" onAction="#handleUpdateRoom" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Update Room" />
                    </HBox>
                </VBox>

                <!-- Rooms List -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                    </padding>

                    <Label text="Your Rooms">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>

                    <ListView fx:id="roomsList" prefHeight="300.0" prefWidth="300.0" />

                    <Button fx:id="deleteRoomButton" onAction="#handleDeleteRoom" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete Selected Room" />
                </VBox>
            </HBox>
        </VBox>
    </center>

    <style>
        -fx-background-color: #f5f5f5;
    </style>
</BorderPane>