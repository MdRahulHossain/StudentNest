<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentnest.controllers.AdminDashboardController">

       <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #673AB7;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label alignment="CENTER" prefHeight="30.0" prefWidth="216.0" styleClass="Admin_panel_css" text="Admin Panel" textFill="WHITE">
                <font>
                    <Font size="20.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <Label styleClass="PANELNAMEN" text="Total Users:" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <Label fx:id="userCountLabel" prefHeight="27.0" prefWidth="285.0" styleClass="uN" text="0" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>

            <Label styleClass="PANELNAMEN" text="Total Rooms:" textFill="WHITE">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <Label fx:id="roomCountLabel" prefHeight="27.0" prefWidth="245.0" styleClass="rN" text="0" textFill="WHITE">
                <font>
                    <Font size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>

            <Button fx:id="logoutButton" onAction="#handleLogout" prefWidth="200.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 5;" text="ðŸšª Logout" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>

            <!-- Header -->
            <Label fx:id="welcomeLabel" text="Admin Dashboard">
                <font>
                    <Font size="24.0" />
                </font>
            </Label>

            <!-- Content Tabs -->
            <TabPane>
                <!-- Users Tab -->
                <Tab closable="false" text="Users Management">
                    <VBox spacing="15.0">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <Label text="All Registered Users">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <TableView fx:id="usersTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="nameColumn" prefWidth="159.0" text="Name" />
                                <TableColumn fx:id="userTypeColumn" prefWidth="139.0" text="Type" />
                                <TableColumn fx:id="usernameColumn" prefWidth="143.0" text="Username" />
                                <TableColumn fx:id="phoneColumn" text="Phone" />
                            </columns>
                        </TableView>

                        <Button fx:id="deleteUserButton" onAction="#handleDeleteUser" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete Selected User" />
                    </VBox>
                </Tab>

                <!-- Rooms Tab -->
                <Tab closable="false" text="Rooms Management">
                    <VBox spacing="15.0">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <Label text="All Posted Rooms">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <TableView fx:id="roomsTable" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="roomLocationColumn" prefWidth="150.0" text="Location" />
                                <TableColumn fx:id="roomPriceColumn" prefWidth="100.0" text="Price" />
                                <TableColumn fx:id="roomOwnerColumn" prefWidth="150.0" text="Owner" />
                            </columns>
                        </TableView>

                        <Button fx:id="deleteRoomButton" onAction="#handleDeleteRoom" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete Selected Room" />
                    </VBox>
                </Tab>

                <!-- Statistics Tab -->
                <Tab closable="false" text="Statistics">
                    <VBox spacing="15.0">
                        <padding>
                            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                        </padding>

                        <Label text="User Statistics">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>

                        <PieChart fx:id="userStatsChart" prefHeight="400.0" prefWidth="500.0" />
                    </VBox>
                </Tab>
            </TabPane>
        </VBox>
    </center>

    <style>
        -fx-background-color: #f5f5f5;
    </style>
</BorderPane>
