<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="784.0" prefWidth="879.0" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studentnest.StudentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="title" alignment="CENTER" prefHeight="80.0" prefWidth="535.0" styleClass="label-header" text="StudentNest - Student Home Finder" textFill="WHITE">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Location:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <ComboBox fx:id="locationComboBox" prefHeight="62.0" prefWidth="187.0" promptText="Select Location" />
    </HBox>

    <!-- New HBox for price range buttons -->
    <VBox alignment="CENTER" spacing="10.0">
        <Label styleClass="label" text="Price Range:">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#onPriceRangeButtonClick" styleClass="price-range-button" text="৳1000 - ৳2000" userData="1000-2000" />
            <Button onAction="#onPriceRangeButtonClick" styleClass="price-range-button" text="৳2000 - ৳3000" userData="2000-3000" />
            <Button onAction="#onPriceRangeButtonClick" styleClass="price-range-button" text="৳3000 - ৳4000" userData="3000-4000" />
            <Button onAction="#onPriceRangeButtonClick" styleClass="price-range-button" text="৳4000+" userData="4000-MAX" />
            <Button onAction="#onClearPriceFilter" styleClass="clear-filter-button" text="Clear Filter" />
        </HBox>
    </VBox>

    <ListView fx:id="homeListView" prefHeight="468.0" prefWidth="731.0" />

</VBox>
